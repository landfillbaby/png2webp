	libwebp/src/dsp/lossless_enc_mips32.o \
	libwebp/src/dsp/lossless_enc_mips_dsp_r2.o \
	libwebp/src/dsp/lossless_enc_msa.o libwebp/src/dsp/lossless_enc_neon.o \
	libwebp/src/dsp/lossless_enc_sse2.o \
	libwebp/src/dsp/lossless_enc_sse41.o \
