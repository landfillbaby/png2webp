SHELL = /bin/sh
PREFIX ?= /usr/local
INSTALL ?= install
CFLAGS ?= -O3 -Wall -Wextra -s -pipe
CFLAGS += -Ilibpng -Izlib -Ilibwebp -Ilibwebp/src

CFLAGS += -DPNG_ARM_NEON_OPT=0 -DPNG_MIPS_MSA_OPT=0
CFLAGS += -DPNG_POWERPC_VSX_OPT=0 -DPNG_INTEL_SSE_OPT=0

MAKEFLAGS += -r
