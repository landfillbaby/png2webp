	${LIBWEBPBASE_OBJS} ${LIBWEBPENC_OBJS} ${LIBWEBPDEC_OBJS}
SRCS := png2webp.c ${LIBPNG_OBJS:o=c} ${ZLIB_OBJS:o=c} \
	${LIBWEBPBASE_OBJS:o=c} ${LIBWEBPENC_OBJS:o=c} ${LIBWEBPDEC_OBJS:o=c}
PROGS := png2webp.static webp2png.static
.PHONY: all install clean
all install: ${PROGS}
png2webp.static: png2webp.o ${LIBWEBPENC_OBJS}
webp2png.static: webp2png.o ${LIBWEBPDEC_OBJS}
%.o: %.c
	${COMPILE.c} ${OUTPUT_OPTION} $<
webp2png.o: png2webp.c
	${COMPILE.c} ${OUTPUT_OPTION} -o $@ -DFROMWEBP $<
${PROGS}: ${LIBPNG_OBJS} ${ZLIB_OBJS} ${LIBWEBPBASE_OBJS}
	${LINK.o} $^ ${LOADLIBES} ${LDLIBS} -o $@
install:
	${INSTALL} $^ ${DESTDIR}${PREFIX}/bin/
clean:
	${RM} ${PROGS} ${OBJS}
